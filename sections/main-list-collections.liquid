{% javascript %}
  // GA4 Collection Click Tracking
  document.addEventListener('DOMContentLoaded', function() {
    // Prüfe ob wir auf der Collections-Seite sind
    if (window.location.pathname === '/collections' || window.location.pathname.startsWith('/collections/')) {
      // Finde alle Collection-Links
      const collectionLinks = document.querySelectorAll('a[href*="/collections/"]');
      
      collectionLinks.forEach(link => {
        // Überspringe Links, die bereits getrackt werden
        if (link.dataset.trackingAdded) return;
        link.dataset.trackingAdded = 'true';
        
        const linkHref = link.getAttribute('href');
        const linkText = link.textContent.trim();
        
        // Extrahiere Collection-Handle aus URL
        let collectionHandle = null;
        let collectionName = linkText;
        
        try {
          const url = new URL(linkHref, window.location.origin);
          const pathParts = url.pathname.split('/');
          const collectionsIndex = pathParts.indexOf('collections');
          
          if (collectionsIndex !== -1 && pathParts[collectionsIndex + 1]) {
            collectionHandle = pathParts[collectionsIndex + 1];
          }
        } catch (err) {
          // Fallback: Extrahiere aus href direkt
          const match = linkHref.match(/\/collections\/([^\/\?]+)/);
          if (match) {
            collectionHandle = match[1];
          }
        }
        
        // Event-Listener hinzufügen
        link.addEventListener('click', function(e) {
          if (typeof gtag !== 'undefined' && collectionHandle) {
            // Erstelle spezifische Event-Namen für bekannte Collections
            const eventNameMap = {
              'aufputz': 'collection_aufputz_click',
              'unterputz': 'collection_unterputz_click',
              'hohlwand': 'collection_hohlwand_click'
            };
            
            const normalizedHandle = collectionHandle.toLowerCase().replace(/[^a-z0-9]/g, '');
            const normalizedName = (collectionName || '').toLowerCase().replace(/[^a-z0-9]/g, '');
            
            let eventName = 'collection_click';
            if (normalizedHandle.includes('aufputz') || normalizedName.includes('aufputz')) {
              eventName = 'collection_aufputz_click';
            } else if (normalizedHandle.includes('unterputz') || normalizedName.includes('unterputz')) {
              eventName = 'collection_unterputz_click';
            } else if (normalizedHandle.includes('hohlwand') || normalizedName.includes('hohlwand')) {
              eventName = 'collection_hohlwand_click';
            }
            
            gtag('event', eventName, {
              'event_category': 'collections',
              'event_label': collectionName || collectionHandle,
              'collection_name': collectionName || collectionHandle,
              'collection_handle': collectionHandle,
              'collection_url': linkHref,
              'page_location': window.location.href
            });
          }
        });
      });
      
      // Beobachte dynamisch hinzugefügte Links (z.B. bei Pagination)
      const observer = new MutationObserver(function(mutations) {
        const newLinks = document.querySelectorAll('a[href*="/collections/"]:not([data-tracking-added])');
        newLinks.forEach(link => {
          link.dataset.trackingAdded = 'true';
          
          const linkHref = link.getAttribute('href');
          const linkText = link.textContent.trim();
          
          let collectionHandle = null;
          let collectionName = linkText;
          
          try {
            const url = new URL(linkHref, window.location.origin);
            const pathParts = url.pathname.split('/');
            const collectionsIndex = pathParts.indexOf('collections');
            
            if (collectionsIndex !== -1 && pathParts[collectionsIndex + 1]) {
              collectionHandle = pathParts[collectionsIndex + 1];
            }
          } catch (err) {
            const match = linkHref.match(/\/collections\/([^\/\?]+)/);
            if (match) {
              collectionHandle = match[1];
            }
          }
          
          link.addEventListener('click', function(e) {
            if (typeof gtag !== 'undefined' && collectionHandle) {
              // Erstelle spezifische Event-Namen für bekannte Collections
              const normalizedHandle = collectionHandle.toLowerCase().replace(/[^a-z0-9]/g, '');
              const normalizedName = (collectionName || '').toLowerCase().replace(/[^a-z0-9]/g, '');
              
              let eventName = 'collection_click';
              if (normalizedHandle.includes('aufputz') || normalizedName.includes('aufputz')) {
                eventName = 'collection_aufputz_click';
              } else if (normalizedHandle.includes('unterputz') || normalizedName.includes('unterputz')) {
                eventName = 'collection_unterputz_click';
              } else if (normalizedHandle.includes('hohlwand') || normalizedName.includes('hohlwand')) {
                eventName = 'collection_hohlwand_click';
              }
              
              gtag('event', eventName, {
                'event_category': 'collections',
                'event_label': collectionName || collectionHandle,
                'collection_name': collectionName || collectionHandle,
                'collection_handle': collectionHandle,
                'collection_url': linkHref,
                'page_location': window.location.href
              });
            }
          });
        });
      });
      
      // Beobachte den Collections-Container
      const collectionsContainer = document.querySelector('.collection-list, .collections-grid, .page-width');
      if (collectionsContainer) {
        observer.observe(collectionsContainer, {
          childList: true,
          subtree: true
        });
      }
    }
  });
