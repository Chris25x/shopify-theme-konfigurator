    font-size: 1.5rem;
    line-height: 1.6;
    color: #374151;
    margin: 0;
  }

  .technical-disclaimer__content {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .technical-disclaimer__section {
    padding: 24px;
    background: #fafbfc;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
  }

  .technical-disclaimer__section--summary {
    background: #fff7ed;
    border: 2px solid #fb923c;
  }

  .technical-disclaimer__section-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: #005A9C;
    margin: 0 0 16px 0;
  }

  .technical-disclaimer__list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .technical-disclaimer__list li {
    font-size: 1.5rem;
    line-height: 1.7;
    color: #4b5563;
    padding: 10px 0;
    padding-left: 28px;
    position: relative;
  }

  .technical-disclaimer__list li::before {
    content: '•';
    position: absolute;
    left: 8px;
    color: #005A9C;
    font-weight: bold;
    font-size: 1.6rem;
  }

  .technical-disclaimer__footer {
    margin-top: 48px;
    padding: 24px;
    background: #f8f9fc;
    border-radius: 12px;
    text-align: center;
  }

  .technical-disclaimer__footer-text {
    font-size: 1.4rem;
    line-height: 1.6;
    color: #6b7280;
    margin: 0;
  }

  .technical-disclaimer__footer-text strong {
    color: #111827;
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .technical-disclaimer {
      padding: 40px 0;
    }

    .technical-disclaimer__container {
      padding: 0 16px;
    }

    .technical-disclaimer__title {
      font-size: 24px;
    }

    .technical-disclaimer__intro {
      padding: 16px 20px;
      margin-bottom: 32px;
    }

    .technical-disclaimer__intro p {
      font-size: 1.4rem;
    }

    .technical-disclaimer__content {
      gap: 24px;
    }

    .technical-disclaimer__section {
      padding: 20px;
    }

    .technical-disclaimer__section-title {
      font-size: 1.6rem;
    }

    .technical-disclaimer__list li {
      font-size: 1.4rem;
      padding: 8px 0;
      padding-left: 24px;
    }

    .technical-disclaimer__footer {
      margin-top: 32px;
      padding: 20px;
    }

    .technical-disclaimer__footer-text {
      font-size: 1.3rem;
    }
  }
</style>

