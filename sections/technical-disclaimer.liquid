    max-width: 1000px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .technical-disclaimer__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .technical-disclaimer__title {
    font-size: {{ section.settings.title_font_size | default: 28 }}px;
    font-weight: {{ section.settings.title_font_weight | default: 700 }};
    color: #111827;
    margin: 0 0 12px 0;
    letter-spacing: -0.02em;
  }

  .technical-disclaimer__intro {
    background: #f8f9fc;
    border-left: 4px solid #005A9C;
    padding: 20px 24px;
    margin-bottom: 40px;
    border-radius: 8px;
  }

