      "default": "Jetzt konfigurieren"
    },
    {
      "type": "url",
      "id": "cta1_url",
      "label": "Button 1 Link"
    },
    {
      "type": "text",
      "id": "cta2_text",
      "label": "Button 2 Text",
      "default": "Unsicher? Kurz beraten lassen"
    },
    {
      "type": "url",
      "id": "cta2_url",
      "label": "Button 2 Link"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding oben",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding unten",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Use Cases"
    }
  ]
}
