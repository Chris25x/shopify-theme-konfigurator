  /* === Header Icons (Login + Cart + Konfigurator) === */
  :root{
    --primary: #005A9C;
    --icon-size: 44px;          /* Kachelgröße */
    --icon-radius: 12px;        /* abgerundete Ecken */
    --icon-border: #e2e8f0;     /* Randfarbe (slate-200) */
    --icon-fg: #0f172a;         /* Icon-Farbe (slate-900) */
    --icon-bg: #fff;            /* Hintergrund */
    --icon-hover-bg: #f8fafc;   /* Hover-Hintergrund (slate-50) */
  }

  /* Grundstil für Icon-Buttons - bestehende Klassen */
  .header__icon--account,
  .header__icon--cart {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;

    width: var(--icon-size);
    height: var(--icon-size);
    border-radius: var(--icon-radius);
    border: 1px solid var(--icon-border);
    background: var(--icon-bg);
    color: var(--icon-fg);

    transition: background-color .2s ease, box-shadow .2s ease, transform .08s ease;
    -webkit-tap-highlight-color: transparent;
    text-decoration: none;
  }

  /* Einheitlicher Abstand zwischen Icons */
  .header__icon--account {
    margin-right: 0.8rem;
  }

  .header__icon--cart {
    margin-right: 0;
    position: relative;
  }

  /* ===== Cart-Badge – oval wie im Mock (Dawn override) ===== */

  /* Eltern: sichert die absolute Position der Bubble */
  .header__icon--cart {
    position: relative;
  }

  /* Pillenform, Größe, Position, Stil */
  .header__icon--cart .cart-count-bubble{
    position: absolute;
    /* Position am Karten-Icon */
    top: -8px;          /* vertikal: näher ans Icon; feinjustierbar */
    right: -6px;        /* horizontal: an die Kante; feinjustierbar */
    left: auto;
    bottom: auto;

    display: inline-flex;
    align-items: center;
    justify-content: center;

    /* Größe */
    height: 18px;       /* Badge-Höhe (Mock-kompakt) */
    min-width: 24px;    /* Grundbreite für 1-stellige Zahl */
    padding: 0 6px;     /* macht bei 2+ Stellen die ovale Form */
    border-radius: 9999px;

    /* Look & Typo */
    background: #005A9C;     /* Markenblau */
    color: #fff;
    font-size: 11px;         /* Zahlengröße */
    font-weight: 700;
    line-height: 1;

    /* Effekt & Verhalten */
    box-shadow: 0 6px 14px rgba(0,90,156,.20);
    border: 0;
    z-index: 2;
    pointer-events: none;     /* verhindert zufällige Klicks auf die Bubble */
  }

  /* Zahl im Bubble-Span erbt sauber die Typo */
  .header__icon--cart .cart-count-bubble span{
    font-size: inherit;
    color: #fff;
    line-height: 1;
    transform: translateY(0); /* optisch mittig */
  }

  /* Sicherstellen, dass das Cart-Icon unter der Bubble liegt */
  .header__icon--cart{
    position: relative;
    z-index: 1;
  }

  /* Mobile evtl. leicht nach innen rücken */
  @media (max-width: 749px){
    .header__icon--cart .cart-count-bubble{
      top: -7px;
      right: -5px;
    }
  }

  /* Barrierefreiheit: Windows High-Contrast */
  @media (forced-colors: active){
    .header__icon--cart .cart-count-bubble{
      forced-color-adjust: none;
      background: CanvasText;
      color: Canvas;
      border: 1px solid CanvasText;
      box-shadow: none;
    }
  }

  /* Allgemeines Button-Layout */
