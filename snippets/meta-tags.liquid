{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_url = canonical_url | default: request.origin
  assign og_type = 'website'
  assign og_description = page_description | default: shop.description | default: shop.name

  if request.page_type == 'product'
    assign og_type = 'product'
    assign og_title = product.title | default: shop.name
    assign og_description = product.description | strip_html | truncate: 160 | default: shop.description
  elsif request.page_type == 'article'
    assign og_type = 'article'
    assign og_title = article.title | default: shop.name
    assign og_description = article.excerpt | strip_html | truncate: 160 | default: article.content | strip_html | truncate: 160
  elsif request.page_type == 'password'
    assign og_url = request.origin
  endif
%}

<!-- Open Graph Meta Tags -->
<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{{ og_type }}">
<meta property="og:description" content="{{ og_description | escape }}">
<meta property="og:locale" content="{{ request.locale.iso_code }}">

<!-- Additional SEO Meta Tags -->
<meta name="robots" content="index, follow">
<meta name="author" content="{{ shop.name }}">
<meta name="generator" content="Shopify">
<meta name="format-detection" content="telephone=no">

{%- if page_image -%}
  <meta property="og:image" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="{{ page_image.alt | escape | default: og_title | escape }}">
{%- elsif request.page_type == 'product' and product.featured_image -%}
  <meta property="og:image" content="https:{{ product.featured_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:secure_url" content="https:{{ product.featured_image | image_url: width: 1200, height: 630 }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
  <meta property="og:image:alt" content="{{ product.featured_image.alt | escape | default: product.title | escape }}">
{%- endif -%}

{%- if request.page_type == 'product' -%}
  <meta property="og:price:amount" content="{{ product.price | money_without_currency | strip_html }}">
  <meta property="og:price:currency" content="{{ cart.currency.iso_code }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">
