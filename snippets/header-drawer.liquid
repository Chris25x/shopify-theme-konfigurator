{% comment %}
  Renders a header drawer menu for mobile and desktop.

  Usage:
  {% render 'header-drawer' %}
{% endcomment %}

<header-drawer data-breakpoint="{% if section.settings.menu_type_desktop == 'drawer' %}desktop{% else %}tablet{% endif %}">
  <details id="Details-menu-drawer-container" class="menu-drawer-container">
    <summary
      class="header__icon header__icon--menu header__icon--summary link focus-inset"
      aria-label="{{ 'sections.header.menu' | t }}"
    >
      <span>
        {{- 'icon-hamburger.svg' | inline_asset_content -}}
        {{- 'icon-close.svg' | inline_asset_content -}}
      </span>
    </summary>
    <div id="menu-drawer" class="gradient menu-drawer motion-reduce color-{{ section.settings.menu_color_scheme }}">
      <div class="menu-drawer__inner-container">
        <div class="menu-drawer__navigation-container">
          <nav class="menu-drawer__navigation">
            <ul class="menu-drawer__menu has-submenu list-menu" role="list">
              {%- if section.settings.menu != blank -%}
                {%- for link in section.settings.menu.links -%}
                <li>
                  {%- if link.links != blank -%}
                    <details id="Details-menu-drawer-menu-item-{{ forloop.index }}">
                      <summary
                        id="HeaderDrawer-{{ link.handle }}"
                        class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.child_active %} menu-drawer__menu-item--active{% endif %}"
                      >
                        {{ link.title | escape }}
                        <span class="svg-wrapper">
                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                        </span>
                        <span class="svg-wrapper">
                          {{- 'icon-caret.svg' | inline_asset_content -}}
                        </span>
                      </summary>
                      <div
                        id="link-{{ link.handle | escape }}"
                        class="menu-drawer__submenu has-submenu gradient motion-reduce"
                        tabindex="-1"
                      >
                        <div class="menu-drawer__inner-submenu">
                          <button class="menu-drawer__close-button link link--text focus-inset" aria-expanded="true">
                            <span class="svg-wrapper">
                              {{- 'icon-arrow.svg' | inline_asset_content -}}
                            </span>
                            {{ link.title | escape }}
                          </button>
                          <ul class="menu-drawer__menu list-menu" role="list" tabindex="-1">
                            {%- for childlink in link.links -%}
                              <li>
                                {%- if childlink.links == blank -%}
                                  <a
                                    id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                    href="{{ childlink.url }}"
                                    class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if childlink.current %} menu-drawer__menu-item--active{% endif %}"
                                    {% if childlink.current %}
                                      aria-current="page"
                                    {% endif %}
                                  >
                                    {{ childlink.title | escape }}
                                  </a>
                                {%- else -%}
                                  <details id="Details-menu-drawer-{{ link.handle }}-{{ childlink.handle }}">
                                    <summary
                                      id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                      class="menu-drawer__menu-item link link--text list-menu__item focus-inset"
                                    >
                                      {{ childlink.title | escape }}
                                      <span class="svg-wrapper">
                                        {{- 'icon-arrow.svg' | inline_asset_content -}}
                                      </span>
                                      <span class="svg-wrapper">
                                        {{- 'icon-caret.svg' | inline_asset_content -}}
                                      </span>
                                    </summary>
                                    <div
                                      id="childlink-{{ childlink.handle | escape }}"
                                      class="menu-drawer__submenu has-submenu gradient motion-reduce"
                                    >
                                      <button
                                        class="menu-drawer__close-button link link--text focus-inset"
                                        aria-expanded="true"
                                      >
                                        <span class="svg-wrapper">
                                          {{- 'icon-arrow.svg' | inline_asset_content -}}
                                        </span>
                                        {{ childlink.title | escape }}
                                      </button>
                                      <ul
                                        class="menu-drawer__menu list-menu"
                                        role="list"
                                        tabindex="-1"
                                      >
                                        {%- for grandchildlink in childlink.links -%}
                                          <li>
                                            <a
                                              id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                              href="{{ grandchildlink.url }}"
                                              class="menu-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"
                                              {% if grandchildlink.current %}
                                                aria-current="page"
                                              {% endif %}
                                            >
                                              {{ grandchildlink.title | escape }}
                                            </a>
                                          </li>
                                        {%- endfor -%}
                                      </ul>
                                    </div>
                                  </details>
                                {%- endif -%}
                              </li>
                            {%- endfor -%}
                          </ul>
                        </div>
                      </div>
                    </details>
                  {%- else -%}
                    <a
                      id="HeaderDrawer-{{ link.handle }}"
                      href="{{ link.url }}"
                      class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                      {% if link.current %}
                        aria-current="page"
                      {% endif %}
                    >
                      {{ link.title | escape }}
                    </a>
                  {%- endif -%}
                </li>
                {%- endfor -%}
              {%- else -%}
                <li>
                  <a href="/" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Startseite
                  </a>
                </li>
                <li>
                  <a href="/pages/konfigurator" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Konfigurator
                  </a>
                </li>
                <li>
                  <a href="/collections" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Produkte
                  </a>
                </li>
                <li>
                  <a href="/pages/kontakt" class="menu-drawer__menu-item list-menu__item link link--text focus-inset">
                    Kontakt
                  </a>
                </li>
              {%- endif -%}
            </ul>
            
            {%- comment -%} Konfigurator Button unter der Navigation {%- endcomment -%}
            <a
              href="https://sicherungskasten24.de/pages/konfigurator"
              class="menu-drawer__cta button button--primary"
              target="_blank"
              rel="noopener noreferrer"
            >
              Jetzt konfigurieren
            </a>
            
          </nav>
          <div class="menu-drawer__utility-links">
            {%- if shop.customer_accounts_enabled -%}
              <a
                href="{%- if customer -%}{{ routes.account_url }}{%- else -%}{{ routes.account_login_url }}{%- endif -%}"
                class="header__icon header__icon--account link focus-inset menu-drawer__account-link"
                aria-label="{%- if customer -%}{{ 'customer.account_fallback' | t }}{%- else -%}{{ 'customer.log_in' | t }}{%- endif -%}"
                rel="nofollow"
              >
                <span class="svg-wrapper">
                  {{- 'icon-account.svg' | inline_asset_content -}}
                </span>
                <span class="menu-drawer__account-text">
                  {%- liquid
                    if customer
                      echo 'customer.account_fallback' | t
                    else
                      echo 'Anmelden'
                    endif
                  -%}
                </span>
              </a>
            {%- endif -%}
            
            <ul class="list list-social list-unstyled" role="list">
              {%- if settings.social_twitter_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_twitter_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-twitter.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_facebook_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_facebook_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-facebook.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_pinterest_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_pinterest_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-pinterest.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_instagram_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_instagram_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-instagram.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_tiktok_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_tiktok_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-tiktok.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_tumblr_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_tumblr_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-tumblr.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_snapchat_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_snapchat_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-snapchat.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_youtube_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_youtube_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-youtube.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
              {%- if settings.social_vimeo_link != blank -%}
                <li class="list-social__item">
                  <a href="{{ settings.social_vimeo_link }}" class="list-social__link link">
                    <span class="svg-wrapper">
                      {{- 'icon-vimeo.svg' | inline_asset_content -}}
                    </span>
                    <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
                  </a>
                </li>
              {%- endif -%}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </details>
</header-drawer>

<script>
// Auto-Close Mobile Menu nach Navigation
document.addEventListener('DOMContentLoaded', function() {
  const menuDrawer = document.getElementById('Details-menu-drawer-container');
  const menuItems = document.querySelectorAll('.menu-drawer__menu-item');
  
  if (menuDrawer && menuItems.length > 0) {
    menuItems.forEach(function(item) {
      item.addEventListener('click', function() {
        // Schließe das Menu nach kurzer Verzögerung
        setTimeout(function() {
          const details = menuDrawer.closest('details');
          if (details) {
            details.removeAttribute('open');
            details.classList.remove('menu-opening');
          }
          
          // Setze auch das summary Element zurück - genau wie beim manuellen Schließen
          const summary = document.querySelector('.header__icon--summary');
          if (summary) {
            summary.setAttribute('aria-expanded', 'false');
            summary.classList.remove('menu-opening', 'menu-closing');
          }
          
          // Setze auch das details Element vollständig zurück
          if (details) {
            details.classList.remove('menu-opening', 'menu-closing');
            details.setAttribute('aria-expanded', 'false');
          }
          
          // Entferne alle möglichen Overlay-Container
          const overlays = document.querySelectorAll('.menu-drawer__overlay, .overlay, .menu-overlay, [class*="overlay"]');
          overlays.forEach(overlay => {
            overlay.remove();
          });
          
          // Entferne alle möglichen Backdrop-Elemente
          const backdrops = document.querySelectorAll('.backdrop, .menu-backdrop, [class*="backdrop"]');
          backdrops.forEach(backdrop => {
            backdrop.remove();
          });
          
          // Mobile-spezifische Lösung für das Scrollen
          // Entferne alle Menü-spezifischen Klassen und Styles
          document.body.classList.remove('overflow-hidden', 'menu-opening', 'menu-closing', 'menu-open');
          document.documentElement.classList.remove('overflow-hidden', 'menu-opening', 'menu-closing', 'menu-open');
          
          // Setze alle Body-Styles zurück - besonders wichtig für Mobile
          document.body.style.overflow = '';
          document.body.style.position = '';
          document.body.style.top = '';
          document.body.style.left = '';
          document.body.style.right = '';
          document.body.style.bottom = '';
          document.body.style.width = '';
          document.body.style.height = '';
          document.body.style.touchAction = '';
          document.body.style.overscrollBehavior = '';
          
          // Setze alle HTML-Styles zurück
          document.documentElement.style.overflow = '';
          document.documentElement.style.position = '';
          document.documentElement.style.top = '';
          document.documentElement.style.left = '';
          document.documentElement.style.right = '';
          document.documentElement.style.bottom = '';
          document.documentElement.style.width = '';
          document.documentElement.style.height = '';
          document.documentElement.style.touchAction = '';
          document.documentElement.style.overscrollBehavior = '';
          
          // Entferne nur Menü-spezifische Klassen, aber behalte Header-Funktionalität
          const menuElements = document.querySelectorAll('.header-drawer, .menu-drawer, .menu-drawer-container');
          menuElements.forEach(element => {
            element.classList.remove('menu-opening', 'menu-closing', 'overflow-hidden', 'menu-open');
            element.style.overflow = '';
            element.style.position = '';
            element.style.touchAction = '';
          });
          
          // Entferne nur Menü-Klassen vom Header, aber behalte andere wichtige Klassen
          const header = document.querySelector('.header');
          if (header) {
            // Entferne nur Menü-spezifische Klassen, aber behalte alle anderen
            header.classList.remove('menu-opening', 'menu-closing', 'menu-open');
            // NICHT: overflow-hidden entfernen, da das die Header-Funktionalität beeinträchtigen könnte
            // Behalte alle anderen Header-Klassen für "Fixierten Header beim Hochscrollen"
          }
          
          // Entferne Menü-Klassen von anderen wichtigen Elementen
          const otherElements = document.querySelectorAll('.page, .main, .shopify-section');
          otherElements.forEach(element => {
            element.classList.remove('menu-opening', 'menu-closing', 'overflow-hidden', 'menu-open');
            element.style.overflow = '';
            element.style.position = '';
            element.style.touchAction = '';
          });
          
          // Mobile-spezifische Scroll-Wiederherstellung
          if (window.innerWidth <= 749) {
            // Erzwinge die Wiederherstellung des Scrollens auf Mobile
            document.body.style.overflow = 'auto';
            document.documentElement.style.overflow = 'auto';
            
            // Entferne alle möglichen Touch-Blockierungen
            document.body.style.touchAction = 'auto';
            document.documentElement.style.touchAction = 'auto';
            
            // Stelle sicher, dass der Viewport korrekt ist
            document.documentElement.style.height = 'auto';
            document.body.style.height = 'auto';
            
            // Stelle sicher, dass der Header seine Position behält
            const header = document.querySelector('.header');
            if (header) {
              // Entferne nur Menü-spezifische Styles, aber behalte Header-Funktionalität
              // Lass die CSS-Klassen für "Fixierten Header beim Hochscrollen" unberührt
              header.style.overflow = '';
              header.style.touchAction = '';
              // NICHT: position, top, left, right, zIndex zurücksetzen!
            }
          }
          
          // Entferne alle möglichen ::before und ::after Pseudo-Elemente
          const style = document.createElement('style');
          style.textContent = `
            .menu-drawer::before,
            .menu-drawer::after,
            .menu-drawer-container::before,
            .menu-drawer-container::after,
            .header-drawer::before,
            .header-drawer::after,
            .header__icon--summary::before,
            .header__icon--menu::before,
            .header__icon--summary::after,
            .header__icon--menu::after,
            summary::before,
            summary::after {
              display: none !important;
            }
          `;
          document.head.appendChild(style);
          
          // Entferne den Style nach kurzer Zeit wieder
          setTimeout(() => {
            if (style.parentNode) {
              style.parentNode.removeChild(style);
            }
          }, 500);
        }, 100);
      });
    });
  }
});
</script>
