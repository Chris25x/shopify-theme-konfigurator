            // PrÃ¼fe ob Dialog geÃ¶ffnet ist
            const dialog = document.getElementById('shopify-pc__prefs__dialog');
            const isDialogOpen = dialog && 
              dialog.hasAttribute('aria-modal') && 
              dialog.getAttribute('aria-modal') === 'true' &&
              window.getComputedStyle(dialog).display !== 'none';
            
            // Overlay anzeigen, wenn Banner ODER Dialog sichtbar ist
            if (isBannerVisible || isDialogOpen) {
              if (isBannerVisible) {
                banner.setAttribute('aria-modal', 'true');
              } else {
                banner.setAttribute('aria-modal', 'false');
              }
              overlay && overlay.classList.add('is-visible');
            } else {
              banner.setAttribute('aria-modal', 'false');
              overlay && overlay.classList.remove('is-visible');
            }
          };

          // Ãœberwache Dialog-Status und verstecke Banner wenn Dialog geÃ¶ffnet
          function setupDialogObserver() {
            if (!dialog) return;

            const checkDialogState = () => {
              const dialogIsOpen = dialog.hasAttribute('aria-modal') && 
                                   dialog.getAttribute('aria-modal') === 'true' &&
                                   dialog.style.display !== 'none' &&
                                   window.getComputedStyle(dialog).display !== 'none';
              
              if (dialogIsOpen) {
                banner.setAttribute('hidden', '');
                banner.style.display = 'none';
                // Overlay sichtbar halten, wenn Dialog geÃ¶ffnet ist
                overlay && overlay.classList.add('is-visible');
              } else {
                // PrÃ¼fe ob Banner wieder angezeigt werden soll
                const cs = window.getComputedStyle(banner);
                const shouldShowBanner = !banner.hasAttribute('hidden') ||
                  (cs.display !== 'none' && cs.visibility !== 'hidden' && cs.opacity !== '0');
                
                if (shouldShowBanner) {
                  banner.removeAttribute('hidden');
                  banner.style.display = '';
                  overlay && overlay.classList.add('is-visible');
                } else {
                  overlay && overlay.classList.remove('is-visible');
                }
              }
              
              // updateState aufrufen, um Overlay-Status zu synchronisieren
              updateState();
            };

            // Initialer Check
            checkDialogState();

            // MutationObserver fÃ¼r Dialog-Ã„nderungen
            const dialogObserver = new MutationObserver(checkDialogState);
            dialogObserver.observe(dialog, {
              attributes: true,
              attributeFilter: ['aria-modal', 'style', 'hidden', 'class'],
              childList: false,
              subtree: false
            });

            // Auch Style-Ã„nderungen Ã¼berwachen
            const styleObserver = new MutationObserver(() => {
              setTimeout(checkDialogState, 0);
            });
            styleObserver.observe(dialog, {
              attributes: true,
              attributeFilter: ['style'],
              childList: false,
              subtree: false
            });
          }

          const observer = new MutationObserver(() => {
            updateState();
            // PrÃ¼fe nach Dialog, falls er spÃ¤ter geladen wird
            if (!dialog || !document.getElementById('shopify-pc__prefs__dialog')) {
              const newDialog = document.getElementById('shopify-pc__prefs__dialog');
              if (newDialog) {
                setupDialogObserver();
              }
            }
          });
          observer.observe(banner, {
            attributes: true,
            attributeFilter: ['hidden', 'style', 'class'],
            childList: false,
            subtree: false
          });

          // Setup Dialog Observer
          if (dialog) {
            setupDialogObserver();
          } else {
            // Warte auf Dialog
            const dialogWatcher = new MutationObserver(() => {
              const newDialog = document.getElementById('shopify-pc__prefs__dialog');
              if (newDialog) {
                setupDialogObserver();
                dialogWatcher.disconnect();
              }
            });
            dialogWatcher.observe(document.body, { childList: true, subtree: true });
          }

          updateState();
        }

        function setupManagePrefsButton() {
          const manageButton = document.getElementById('shopify-pc__banner__btn-manage-prefs');
          const banner = document.getElementById('shopify-pc__banner');
          
          if (manageButton && banner) {
            // Text Ã¤ndern
            changeManagePrefsButtonText();
            
            manageButton.addEventListener('click', function() {
              // Banner sofort verstecken, wenn Dialog-Button geklickt wird
              setTimeout(() => {
                banner.setAttribute('hidden', '');
                banner.style.display = 'none';
              }, 50); // Kleine VerzÃ¶gerung, damit Dialog zuerst Ã¶ffnet
            });
          }
        }

        function addCookieEmojiToTitle() {
          const title = document.getElementById('shopify-pc__banner__body-title');
          if (title && !title.dataset.emojiAdded) {
            // PrÃ¼fe ob Emoji bereits vorhanden ist
            if (!title.textContent.includes('ðŸª')) {
              title.textContent = title.textContent + ' ðŸª';
              title.dataset.emojiAdded = 'true';
            }
          }
        }

        function changeManagePrefsButtonText() {
          const manageButton = document.getElementById('shopify-pc__banner__btn-manage-prefs');
          if (manageButton && !manageButton.dataset.textChanged) {
            // Ã„ndere "Einstellungen verwalten" zu "Einstellungen"
            if (manageButton.textContent.includes('Einstellungen verwalten')) {
              manageButton.textContent = manageButton.textContent.replace('Einstellungen verwalten', 'Einstellungen');
              manageButton.dataset.textChanged = 'true';
            }
            // Falls der Text in einem Span ist
            const span = manageButton.querySelector('span');
            if (span && span.textContent.includes('Einstellungen verwalten')) {
              span.textContent = span.textContent.replace('Einstellungen verwalten', 'Einstellungen');
            }
          }
        }

        function ensureBannerWrappedAndReady() {
          const banner = wrapCookieBanner();
          if (banner) {
            setupAriaScrollAndOverlay(banner);
            setupManagePrefsButton();
            // Cookie-Emoji zum Titel hinzufÃ¼gen
            addCookieEmojiToTitle();
            // Button-Text Ã¤ndern
            changeManagePrefsButtonText();
            return true;
          }
          return false;
        }

        function init() {
          // Versuch sofort
          let wrapped = ensureBannerWrappedAndReady();

          // Falls das Banner spÃ¤ter in den DOM kommt: Beobachten
          const watcher = new MutationObserver(() => {
            if (!wrapped) {
              wrapped = ensureBannerWrappedAndReady();
              if (wrapped) {
                watcher.disconnect();
              }
            }
            // PrÃ¼fe auch kontinuierlich auf Titel, falls er spÃ¤ter geladen wird
            addCookieEmojiToTitle();
          });

          watcher.observe(document.body, { childList: true, subtree: true });
          
          // ZusÃ¤tzlicher Observer speziell fÃ¼r Titel-Ã„nderungen
          const titleWatcher = new MutationObserver(() => {
            addCookieEmojiToTitle();
            changeManagePrefsButtonText();
          });
          
          // Warte auf Titel und Button, und beobachte dann deren Ã„nderungen
          const checkElements = setInterval(() => {
            const title = document.getElementById('shopify-pc__banner__body-title');
            const manageButton = document.getElementById('shopify-pc__banner__btn-manage-prefs');
            
            if (title) {
              addCookieEmojiToTitle();
              titleWatcher.observe(title, { 
                childList: true, 
                subtree: true, 
                characterData: true 
              });
            }
            
            if (manageButton) {
              changeManagePrefsButtonText();
              titleWatcher.observe(manageButton, { 
                childList: true, 
                subtree: true, 
                characterData: true 
              });
            }
            
            if (title && manageButton) {
              clearInterval(checkElements);
            }
          }, 100);
          
          // Nach 5 Sekunden stoppen, falls Elemente nicht erscheinen
          setTimeout(() => clearInterval(checkElements), 5000);
        }

        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', init);
        } else {
          init();
        }
      })();
    </script>
